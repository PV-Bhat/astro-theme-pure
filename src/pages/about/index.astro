  {
    title: "Senior Developer",
    company: "Tech Company, Inc.",
    period: "2020 - Present",
    achievements: [
      "Led the development of a major application that increased client engagement by 40%",
      "Mentored junior developers and implemented code review processes",
      "Collaborated with the design team to improve UI/UX across platforms"
    ]
  },
  {
    title: "Web Developer",
    company: "Digital Solutions Company",
    period: "2017 - 2020",
    achievements: [
      "Developed responsive websites for various clients across industries",
      "Implemented SEO best practices resulting in 25% increase in organic traffic",
      "Managed projects from inception to deployment"
    ]
  }
]

const contactInfo = [
  { type: "Email", value: "your.email@example.com", link: "mailto:your.email@example.com" },
  { type: "Twitter", value: "@yourusername", link: "https://twitter.com/yourusername" },
  { type: "LinkedIn", value: "linkedin.com/in/yourusername", link: "https://linkedin.com/in/yourusername" },
  { type: "Contact", value: "Get in touch", link: "/contact", isButton: true }
]

// Breadcrumb items
const breadcrumbItems = [
  {
    label: "About",
    href: "/about"
  }
];
---

<style>
  /* Darker background */
  :global(body) {
    background-color: #050505;
  }
  
  .glass-card {
    background: rgba(5, 5, 5, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(52, 211, 153, 0.1);
    border-radius: 0.75rem;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    overflow: hidden;
  }
  
  .glass-card:hover {
    background: rgba(10, 10, 15, 0.7);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }
  
  .section-heading {
    position: relative;
    display: inline-block;
    margin-bottom: 1.5rem;
  }
  
  .section-heading::after {
    content: '';
    position: absolute;
    bottom: -0.5rem;
    left: 0;
    width: 3rem;
    height: 2px;
    background: linear-gradient(to right, rgba(52, 211, 153, 0.8), rgba(20, 184, 166, 0.4));
  }
  
  .skill-tag {
    background: rgba(5, 10, 15, 0.8);
    transition: all 0.3s ease;
  }
  
  .skill-tag:hover {
    background: rgba(5, 150, 105, 0.2);
    transform: translateY(-2px);
    box-shadow: 0 0 10px rgba(52, 211, 153, 0.2);
  }
  
  .timeline-item {
    border-left: 2px solid rgba(52, 211, 153, 0.5);
    position: relative;
    padding-left: 1.5rem;
    margin-bottom: 2rem;
  }
  
  .timeline-item::before {
    content: '';
    position: absolute;
    left: -6px;
    top: 0;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: rgba(52, 211, 153, 0.8);
  }
  
  /* Contact button */
  .contact-button {
    background: linear-gradient(135deg, rgba(5, 150, 105, 0.8), rgba(16, 185, 129, 0.8));
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
  }
  
  .contact-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.8), rgba(5, 150, 105, 0.8));
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .contact-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
  }
  
  .contact-button:hover::before {
    opacity: 1;
  }
  
  /* Streak-lined animations */
  .streak {
    position: absolute;
    height: 1px;
    background: linear-gradient(90deg, 
      rgba(52, 211, 153, 0) 0%, 
      rgba(52, 211, 153, 0.2) 50%, 
      rgba(52, 211, 153, 0) 100%
    );
    opacity: 0.4;
    transform: rotate(-45deg);
    transform-origin: 50% 50%;
  }
  
  .streak-1 {
    width: 35vw;
    top: 15%;
    left: -5%;
    opacity: 0.3;
  }
  
  .streak-2 {
    width: 35vw;
    top: 45%;
    right: -10%;
    opacity: 0.2;
  }
  
  .streak-3 {
    width: 30vw;
    bottom: 25%;
    left: 5%;
    opacity: 0.25;
  }
</style>

<PageLayout meta={{ title: `About | ${config.title}`, description: `About ${config.title}` }}>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumbs navigation -->
    <Breadcrumbs items={breadcrumbItems} class="mb-6" />
    
    <div class="min-h-screen py-16 relative">
      <!-- Background with streaks -->
