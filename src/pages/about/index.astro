---
import { Image } from 'astro:assets'
import PageLayout from '@/layouts/BaseLayout.astro'
import Breadcrumbs from '@/components/core/Breadcrumbs.astro'
import config from '../../site.config'
import '../../styles/animations.css'
import '../../styles/glass.css'

// Breadcrumb items
const breadcrumbItems = [
  {
    label: "About",
    href: "/about"
  }
];
---

<style>
  /* Darker background */
  :global(body) {
    background-color: #050505;
  }
  
  .glass-card {
    background: rgba(5, 5, 5, 0.7);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border: 1px solid rgba(52, 211, 153, 0.1);
    border-radius: 0.75rem;
    transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
    overflow: hidden;
  }
  
  .glass-card:hover {
    background: rgba(10, 10, 15, 0.7);
    box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
  }
  
  /* Streak-lined animations */
  .streak {
    position: absolute;
    height: 1px;
    background: linear-gradient(90deg, 
      rgba(52, 211, 153, 0) 0%, 
      rgba(52, 211, 153, 0.2) 50%, 
      rgba(52, 211, 153, 0) 100%
    );
    opacity: 0.4;
    transform: rotate(-45deg);
    transform-origin: 50% 50%;
  }
  
  .streak-1 {
    width: 35vw;
    top: 15%;
    left: -5%;
    opacity: 0.3;
  }
  
  .streak-2 {
    width: 35vw;
    top: 45%;
    right: -10%;
    opacity: 0.2;
  }
  
  .streak-3 {
    width: 30vw;
    bottom: 25%;
    left: 5%;
    opacity: 0.25;
  }
  
  /* Resume button */
  .resume-button {
    background: linear-gradient(135deg, rgba(5, 150, 105, 0.8), rgba(16, 185, 129, 0.8));
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    z-index: 1;
    margin-top: 2rem;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
  }
  
  .resume-button::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(16, 185, 129, 0.8), rgba(5, 150, 105, 0.8));
    z-index: -1;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .resume-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(16, 185, 129, 0.3);
  }
  
  .resume-button:hover::before {
    opacity: 1;
  }
</style>

<PageLayout meta={{ title: `About | ${config.title}`, description: `About ${config.title}` }}>
  <div class="max-w-4xl mx-auto">
    <!-- Breadcrumbs navigation -->
    <Breadcrumbs items={breadcrumbItems} class="mb-6" />
    
    <div class="min-h-screen py-16 relative">
      <!-- Background with streaks -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none z-0">
        <div class="streak streak-1"></div>
        <div class="streak streak-2"></div>
        <div class="streak streak-3"></div>
      </div>
      
      <div class="max-w-4xl mx-auto px-4 relative z-10">
        <!-- Hero section -->
        <div class="glass-card p-8 mb-16 animate-fade">
          <div class="flex flex-col md:flex-row items-center gap-8">
            <div class="w-40 h-40 rounded-full overflow-hidden flex-shrink-0 border-4 border-green-900">
              <div class="w-full h-full bg-gradient-to-br from-gray-800 to-green-900 flex items-center justify-center text-4xl">
                ðŸ‘¤
              </div>
            </div>
            
            <div class="text-center md:text-left">
              <h1 class="text-4xl font-bold mb-3 bg-clip-text text-transparent bg-gradient-to-r from-white to-gray-300">
                Pruthvi Bhat
              </h1>
              <p class="text-xl text-gray-300 mb-6 max-w-2xl">
                AI Innovator | Lead Researcher @ MURST | Combining Technology, People, & Systems
              </p>
              
              <div class="flex gap-4 justify-center md:justify-start">
                <a href="mailto:astroagario03@gmail.com" class="px-4 py-2 bg-black hover:bg-gray-900 rounded-md transition hover-glow">Email</a>
                <a href="https://linkedin.com/in/pruthvi-bhat-" class="px-4 py-2 bg-black hover:bg-gray-900 rounded-md transition hover-glow">LinkedIn</a>
              </div>
            </div>
          </div>
        </div>
        
        <!-- About Me section -->
        <section class="glass-card p-8 mb-12 animate-fade delay-100 text-center">
          <h2 class="text-3xl font-bold mb-6">About Me</h2>
          <div class="prose prose-lg prose-invert max-w-none">
            <p class="text-xl">
              I'm an innovative thinker driven to build impactful, human-centered systems. My approach leverages a unique combination of AI, biotechnology, and human behavior to solve complex challenges from a systems-thinking perspective.
            </p>
            
            <a href="/about/resume" class="resume-button text-center py-4 px-6 rounded-lg text-white font-medium text-lg mt-8 inline-block">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
              View Full Resume
            </a>
          </div>
        </section>
      </div>
    </div>
  </div>
</PageLayout>